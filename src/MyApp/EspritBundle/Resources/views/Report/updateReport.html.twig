                        {{ form_widget(formes.reportid) }}
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Reported Trip</label>
                        <br>
                        {{ form_widget(formes.reportedtid) }}

                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Reported User</label>
                        <br>
                        {{ form_widget(formes.reporteduid) }}

                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">User</label>
                        <br>
                        {{ form_widget(formes.userid) }}

                    </div>


                    {{ form_widget(formes.update) }}
                </form>

            </div>
        </section>
    </div>

    {{ form_end(formes) }}

{% endblock %}

