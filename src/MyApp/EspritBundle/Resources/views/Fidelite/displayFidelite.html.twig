{% extends '@MyAppEsprit/views/templateAdmin.html.twig' %}
{% block reporttable %}

    <!--body wrapper start-->
    <div class="wrapper">
    <div class="row">
    <div class="col-sm-12">
    <section class="panel">
    <header class="panel-heading">
        Reports Table
        <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-down"></a>
                        <a href="javascript:;" class="fa fa-times"></a>
                     </span>
    </header>
    <div class="panel-body">
    <div class="adv-table editable-table ">

<div class="clearfix">
        <div class="btn-group">
            <a href="{{ path('my_app_esprit_fidelite_add') }}" class="btn btn-primary">
                Add New <i class="fa fa-plus"></i>
            </a>
        </div>
        <div class="btn-group pull-right">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu pull-right">
                <li><a href="#">Print</a></li>
                <li><a href="{{ path('ween_report_pdf') }}">Save as PDF</a></li>
                <li><a href="#">Export to Excel</a></li>
            </ul>
        </div>
    </div>





<ul>
    <h2>Liste des offres de fidelite</h2>
    <table class="table table-striped table-hover table-bordered dataTable"
            aria-describedby="editable-sample_info">
        <thead>
        <tr role="row">
            <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" style="width: 172px;" aria-label="First Name">Fidelite</th>
            <th class="sorting_desc" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 169px;" aria-sort="descending" aria-label="Last Name: activate to sort column ascending">User</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 110px;" aria-label="Points: activate to sort column ascending">Trip 1</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 206px;" aria-label="Status: activate to sort column ascending">Trip 2</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 78px;" aria-label="Edit: activate to sort column ascending">Trip 3</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 112px;" aria-label="Delete: activate to sort column ascending">Seen</th></tr>
        </thead>

        <tbody role="alert" aria-live="polite" aria-relevant="all"><tr class="odd">
        {% for i in formes %}
            <tr>
                <td>{{ i.fideliteid }}</td>
                 <td>{{ i.userid.username }}</td>
                <td>{{ i.trip1id.idtripprogram }}</td>
                <td>{{ i.trip2id.idtripprogram }}</td>
                <td>{{ i.trip3id.idtripprogram }}</td>

                <td>{{ i.vu }}</td>
            </tr>
        {% endfor %}
    </table>
</ul>
    {% endblock %}


