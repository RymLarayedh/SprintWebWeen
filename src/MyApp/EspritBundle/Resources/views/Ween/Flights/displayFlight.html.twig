{% extends '@MyAppEsprit/views/templateAdmin.html.twig' %}
{% block reporttable %}

     <!-- page heading start-->
    <div class="page-heading">
        <h3>
            Reports Table
        </h3>
        <ul class="breadcrumb">
            <li>
                <a href="#">Dashboard</a>
            </li>
            <li>
                <a href="#">Manage</a>
            </li>
            <li class="active"> Trip Program </li>
        </ul>
    </div>
    <!-- page heading end-->

    <!--body wrapper start-->
    <div class="wrapper">
    <div class="row">
    <div class="col-sm-12">
    <section class="panel">
    <header class="panel-heading">
        Reports Table
        <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-down"></a>
                        <a href="javascript:;" class="fa fa-times"></a>
                     </span>
    </header>
    <div class="panel-body">
    <div class="adv-table editable-table ">

<div class="clearfix">
        <div class="btn-group">
        <form action="{{ path('my_app_esprit_addFlight')}}" >
    <input  class="btn btn-primary" type="submit" value="Add">
    </form>

        </div>
        <div class="btn-group pull-right">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu pull-right">
                <li><a href="#">Print</a></li>
                <li><a href="#">Save as PDF</a></li>
                <li><a href="#">Export to Excel</a></li>
            </ul>
        </div>
    </div>

<center>
    <h1>  List Of Flights</h1>
    <table class="table table-striped table-hover table-bordered dataTable"
            aria-describedby="editable-sample_info"  >

            <thead>
        <tr role="row">
            <th class="sorting_disabled" role="columnheader" rowspan="1"
            colspan="1" style="width: 172px;" aria-label="First Name">Id</th>
            <th class="sorting_desc" role="columnheader" tabindex="0" aria-controls=
            "editable-sample" rowspan="1" colspan="1" style="width: 169px;" aria-sort="descending"
            aria-label="Last Name: activate to sort column ascending">Arrival Date</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample"
             rowspan="1" colspan="1" style="width: 110px;" aria-label="Points: activate to sort column ascending">Departure Date </th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1"
            colspan="1" style="width: 206px;" aria-label="Status: activate to sort column ascending">Arrival Time</th>

            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1"
            colspan="1" style="width: 206px;" aria-label="Status: activate to sort column ascending">Departure Time</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1"
            colspan="1" style="width: 206px;" aria-label="Status: activate to sort column ascending">Price</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1"
            colspan="1" style="width: 206px;" aria-label="Status: activate to sort column ascending">Arrival City </th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1"
            colspan="1" style="width: 206px;" aria-label="Status: activate to sort column ascending">Departure City</th>

            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1"
            colspan="1" style="width: 206px;" aria-label="Status: activate to sort column ascending">Update</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1"
            colspan="1" style="width: 206px;" aria-label="Status: activate to sort column ascending">Delete </th></tr>
        </thead>
        <tbody role="alert" aria-live="polite" aria-relevant="all"><tr class="odd">



    {%for m in flight %}
        <tr>
            <td class="">  {{ m.idflight }}</td>
            <td class="">  {{ m.arrivaldate.format('j - M - Y')}}</td>
            <td class="">  {{ m.departuredate.format('j - M - Y')}}</td>
            <td class="">  {{ m.arrivaltime | date}}</td>
            <td class="">  {{ m.departuretime | date}}</td>
            <td class="">  {{ m.price}}</td>
            <td class="">  {{ m.idarrivalcity.name}}</td>
            <td class="">  {{ m.iddeparturecity.name}}</td>
            <td> <a href="{{ path('my_app_esprit_updateFlight',{'id':m.idflight}) }}" >Update</a> </td>
            <td> <a href="{{ path('my_app_esprit_deleteFlight',{'id':m.idflight}) }}" >Delete</a> </td>









        </tr>

    {%  endfor %}
    </tbody>
</table>

</center>
{% endblock %}

