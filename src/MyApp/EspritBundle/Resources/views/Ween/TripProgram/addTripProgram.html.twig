    <!--           Formulaire      -->

<form method="POST" action="{{ path('my_app_esprit_addTripProgram') }}">
    <table>


        <tr>
            <td>Country</td>
            <td>:
                <select id="country" onchange="getCountry()" name="country" required>

                </select>
            </td>
        </tr>

        <tr id="cityselect" hidden >
            <td>City</td>
            <td>:
                <select id="city" onchange="getCity()" name="city" required></select>

            </td>
        </tr>

        <tr id="flighttable" hidden>
            <td>Flight</td>
            <td>
                <table id="table" border="1" >



                </table>

            </td>
        </tr>
        <tr id="hoteltable" hidden>
            <td>Hotel</td>
            <td>
                <table id="table2" border="1" >



                </table>

            </td>
        </tr>

        <tr>
            <td> Description</td>
            <td>:
            <textarea rows="4" cols="50" name="description"> </textarea>
            </td>
        </tr>

        <tr>
            <td> Number Passenger</td>
            <td>: <input type="number" name="nbrPassenger" step="10" min="10" max="200" size="100"></td>
        </tr>

        <tr>
            <td> Number of nights </td>
            <td>: <input type="number" name="nbrnights" min="1" max="20" step="1" > </td>
        </tr>

        <tr>

            <td> <input class="btn btn-primary" type="submit" name="Add"></td>
        </tr>



    </table>

</form>

            </section>
        </div>
    </div>
</div>
