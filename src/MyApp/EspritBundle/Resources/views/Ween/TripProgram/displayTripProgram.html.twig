{% extends '@MyAppEsprit/views/templateAdmin.html.twig' %}
{% block reporttable %}

    <!-- page heading start-->
    <div class="page-heading">
        <h3>
            Reports Table
        </h3>
        <ul class="breadcrumb">
            <li>
                <a href="#">Dashboard</a>
            </li>
            <li>
                <a href="#">Manage</a>
            </li>
            <li class="active"> Trip Program </li>
        </ul>
    </div>
    <!-- page heading end-->

    <!--body wrapper start-->
    <div class="wrapper">
    <div class="row">
    <div class="col-sm-12">
    <section class="panel">
    <header class="panel-heading">
        Reports Table
        <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-down"></a>
                        <a href="javascript:;" class="fa fa-times"></a>
                     </span>
    </header>
    <div class="panel-body">
    <div class="adv-table editable-table ">

<div class="clearfix">
        <div class="btn-group">
         <form action="{{ path('my_app_esprit_addTripProgram')}}" >
        <input class="btn btn-primary"  type="submit" value="Add New Trip" ></input>
    </form>





        </div>
        <div class="btn-group pull-right">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu pull-right">
                <li><a href="#">Print</a></li>
                <li><a href="#">Save as PDF</a></li>
                <li><a href="#">Export to Excel</a></li>
            </ul>
        </div>
    </div>

    <!--******************** Tableau ****************************-->





    <h1>  List Of Trip Programs</h1>
    <table class="table table-striped table-hover table-bordered dataTable"
            aria-describedby="editable-sample_info" >

            <thead>
        <tr role="row">
            <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" style="width: 172px;" aria-label="First Name">Arrival City</th>
            <th class="sorting_desc" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 169px;" aria-sort="descending" aria-label="Last Name: activate to sort column ascending">Number Passenger</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 110px;" aria-label="Points: activate to sort column ascending">Price</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 206px;" aria-label="Status: activate to sort column ascending">Rating</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 206px;" aria-label="Status: activate to sort column ascending">Hotel</th></tr>

        </thead>

        <tbody role="alert" aria-live="polite" aria-relevant="all"><tr class="odd">

        {%for t in trip %}
            <tr>
                <td class="">  {{ t.idcity.name}}</td>

                <td class="">  {{ t.nbrpassenger}}</td>
                <td class="">  {{ t.price}}</td>
                <td class="">  {{ t.rating}}</td>
                <td class="">  {{ t.idhotel.name}}</td>

                {#<td>  {{ t.idflight.price}}</td>#}

                <td class=""> <a href="{{ path('my_app_esprit_updateTripProgram',{'id':t.idtripprogram}) }}" >Update</a> </td>
                  <td class=""> <a href="{{ path('my_app_esprit_deleteTripProgram',{'id':t.idtripprogram}) }}" >Delete</a> </td>

            </tr>

        {%  endfor %}
       </tbody>
    </table>

    </div>
    </div>
    </section>
    </div>
    </div>





{% endblock %}

