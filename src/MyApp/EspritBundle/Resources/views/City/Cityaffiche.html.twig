                                </div>
                            </div>




<center>


    <h1> Manage City</h1>
    <table class="table table-striped table-hover table-bordered dataTable"
            aria-describedby="editable-sample_info">
<thead>
        <tr role="row">
            <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" style="width: 172px;" aria-label="First Name">Name</th>
            <th class="sorting_desc" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 169px;" aria-sort="descending" aria-label="Last Name: activate to sort column ascending"> Name Country</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 110px;" aria-label="Points: activate to sort column ascending">Delete</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 206px;" aria-label="Status: activate to sort column ascending">Update</th><tr>
        </thead>
    {%for c in city%}

        <tr>
            <td>  {{ c.name}}</td>
            <td>  {{ c.idcountry.name}}</td>
            <td><a href="{{ path('my_app_esprit_DeleteCity',{'idcity':c.idcity}) }}" > <input type="button" value="Delete"> </a> </td>
            <td><a href="{{ path('my_app_esprit_UpdateCity',{'idcity':c.idcity}) }}" ><input type="button" value="update"> </a> </td>

        </tr>


    {%  endfor %}
    <form method="POST" action="{{ path('City_Search') }}" >


            <table>
                <tr>
                    <td>  <input type="search"  name="name" placeholder="Rechercher"><br>


                </tr>
            </table><br>
