        Reports Table
        <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-down"></a>
                        <a href="javascript:;" class="fa fa-times"></a>
                     </span>
    </header>
    <div class="panel-body">
    <div class="adv-table editable-table ">

<div class="clearfix">
        <div class="btn-group">

        </div>
        <div class="btn-group pull-right">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu pull-right">

                <li><a href="{{ path('ween_report_pdf') }}">Save as PDF</a></li>
                <li><a href="{{ path('ween_report_find') }}">Find Report</a></li>

            </ul>
        </div>
    </div>




        <!-- ****************** Tableau ******************************** -->
    <h2>List of Reports</h2>
    <table class="table table-striped table-hover table-bordered dataTable"
            aria-describedby="editable-sample_info">
        <thead>
        <tr role="row">
            <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" style="width: 172px;" aria-label="First Name">report</th>
            <th class="sorting_desc" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 169px;" aria-sort="descending" aria-label="Last Name: activate to sort column ascending">Reported trip</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 110px;" aria-label="Points: activate to sort column ascending">Reported User</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 206px;" aria-label="Status: activate to sort column ascending">User</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 78px;" aria-label="Edit: activate to sort column ascending">Delete</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 112px;" aria-label="Delete: activate to sort column ascending">Update</th></tr>
        </thead>

        <tbody role="alert" aria-live="polite" aria-relevant="all"><tr class="odd">
        {% for i in reports %}
            <tr>
                <td class="">{{ i.reportid }}</td>
            <td class="">{{ i.reportedtid.idtripprogram }}</td>
            <td class="">{{ i.reporteduid.username }}</td>

            <td class=" sorting_1">{{ i.userid.username }}</td>
            <td class=""><a href="{{ path('ween_report_delete',{'reportid':i.reportid })}}">Delete</a></td>
            <td class=""><a href="{{ path('ween_report_update',{'reportid':i.reportid })}}" >Update</a></td>

        </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
    </div>
    </section>
    </div>
    </div>
    </div>
