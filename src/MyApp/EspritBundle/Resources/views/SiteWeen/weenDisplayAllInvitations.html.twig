{% extends '@MyAppEsprit/views/templatevide.html.twig' %}
{% block liste %}
<h2>List of Invitations</h2>
<table class="table table-striped table-hover table-bordered dataTable"
       aria-describedby="editable-sample_info" >
    <thead>
    <tr role="row">

        <th class="sorting_desc" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 169px;" aria-sort="descending" aria-label="Last Name: activate to sort column ascending">Last Name</th>
        <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 110px;" aria-label="Points: activate to sort column ascending">Name</th>
        <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 206px;" aria-label="Status: activate to sort column ascending">Email</th>
        <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 78px;" aria-label="Edit: activate to sort column ascending">User Name</th>
        <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 112px;" aria-label="Delete: activate to sort column ascending">Accept</th>
        <th class="sorting" role="columnheader" tabindex="0" aria-controls="editable-sample" rowspan="1" colspan="1" style="width: 112px;" aria-label="Delete: activate to sort column ascending">Refuse</th></tr>

    </thead>

    <tbody role="alert" aria-live="polite" aria-relevant="all"><tr class="odd">
    {% for i in friends %}
        <tr>

            <td class="">{{ i.userid.lastname }}</td>
            <td class="">{{ i.userid.name }}</td>
            <td class="">{{ i.userid.Email }}</td>
            <td class=" sorting_1">{{ i.userid.username }}</td>
            <td class=""><a href="{{ path('ween_friend_ween_accept',{'t':i.idfu })}}">Accept</a></td>
            <td class=""><a href="{{ path('ween_friend_ween_refuse',{'idfu':i.idfu })}}" >Refuse</a></td>
        {% endfor %}
        </tr>
    </tbody>
    </table>

    {% endblock %}